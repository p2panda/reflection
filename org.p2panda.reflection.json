{
    "id" : "org.p2panda.reflection",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "reflection",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--env=RUST_BACKTRACE=1",
        "--env=RUST_LOG=reflection=INFO,reflection_doc=INFO,reflection_node=INFO"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ]
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
    	    "name" : "libspelling",
    	    "builddir": true,
	    "buildsystem" : "meson",
	    "sources" : [
	    	{
	    	    "type" : "git",
	    	    "url" : "https://gitlab.gnome.org/GNOME/libspelling.git",
	    	    "branch" : "main"
	    	}
	    ]
    	},
        {
            "name" : "reflection",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "./",
                    "branch" : "HEAD"
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ]
}
