<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ReflectionAuthorsStack" parent="AdwBin">
    <property name="child">
      <object class="GtkStack" id="main_stack">
        <property name="transition-type">crossfade</property>
        <child>
          <object class="GtkBox" id="avatars_box">
            <child>
              <object class="ReflectionOverlappingAvatars" id="avatars">
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="overflow_label">
                <property name="valign">center</property>
                <style>
                  <class name="authors-stack-overflow"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkImage" id="arrow_image">
            <property name="icon-name">pan-down-symbolic</property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>

